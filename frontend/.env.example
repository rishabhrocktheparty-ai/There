# Frontend Environment Variables (Vite)
# Copy this file to frontend/.env and fill in your values
# All variables must be prefixed with VITE_ to be exposed to the client

# Environment
VITE_NODE_ENV=development

# Backend API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_BASE_URL=/api
VITE_WS_URL=ws://localhost:3000

# Google OAuth Client ID (public, safe to expose)
# Get from: https://console.cloud.google.com/apis/credentials
# Must match the client ID configured in backend
VITE_GOOGLE_CLIENT_ID=""

# Apple OAuth Client ID (public, safe to expose)
VITE_APPLE_CLIENT_ID=""

# GitHub OAuth Client ID (public, safe to expose)
VITE_GITHUB_CLIENT_ID=""

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# App Configuration
VITE_APP_NAME="There"
VITE_APP_VERSION="1.0.0"