# Development Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5433/there_dev"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# JWT - IMPORTANT: Use a secure random string in production (min 32 chars)
JWT_SECRET="dev-secret-key-change-in-production-min-32-characters-required"
JWT_EXPIRES_IN=24h

# CORS - Frontend origin
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# AI APIs (optional)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GEMINI_API_KEY=your-google-gemini-api-key

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn

# Email (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
# LOG_FILE=./logs/app.log

# Backup
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"

# CDN (optional)
# CDN_URL=https://your-cdn.cloudfront.net
# CDN_BUCKET=your-assets-bucket

# Social Auth OAuth - Get credentials from cloud console
# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# Redirect URI: http://localhost:3000/api/auth/google/callback

# Apple OAuth: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=""
APPLE_TEAM_ID=""
APPLE_KEY_ID=""
APPLE_PRIVATE_KEY=""
# Redirect URI: http://localhost:3000/api/auth/apple/callback

# GitHub OAuth: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
# Redirect URI: http://localhost:3000/api/auth/github/callback

# Facebook OAuth (optional)
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
